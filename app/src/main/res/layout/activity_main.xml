<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/sdvLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:elevation="10dp"
        android:src="@drawable/userinb"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <EditText
        android:layout_below="@+id/sdvLogo"
        android:id="@+id/etUserId"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="userid"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:background="@drawable/et_rounded_corner"
        android:layout_centerInParent="true"
        />
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etUserId"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:textSize="18sp"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_rounded_corner_without_border"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLogin"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:textSize="18sp"
        android:text="Logout"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_rounded_corner_without_border"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>



</RelativeLayout>